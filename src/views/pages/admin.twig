{% include 'partials/head.twig' %}
{% include 'partials/nav.twig' %}

<div class="page">
    <div class="page__containerOrtho">
        <h1 class="page__container--title">Espace orthophoniste</h1>
        <div class="container__ortho">
            <div class="containerOrtho__left">
                <h2>Rajouter un patient</h2>
                <form action="#" method="POST">
                <div>
                    <label for="username">Identifiant</label>
                    <input type="text" name="username" placeholder="JacquesDurand1829">
                </div>
                <div>
                    <label for="password">Mot de passe</label>
                    <input type="password" name="password" placeholder="Votre mot de passe">
                </div>
                <div>
                    <label for="first_name">Nom</label>
                    <input type="text" name="first_name" placeholder="Durand">
                </div>
                <div>
                    <label for="last_name">Pr√©nom</label>
                    <input type="text" name="last_name" placeholder="Jacques">
                </div>
                    <input type="submit" class="submit-ortho">
                </form>
            </div>
            <div class="containerOrtho__right">
                <h2>Liste des patients</h2>
                <div class="page__container--patientListe">
                    {% for user in users %}
                        {% if user.status < 2 %}
                        <div class="page__container--id">
                            <h3>{{ user.first_name }}</h3>
                            <h3>{{ user.last_name }}</h3>
                            <a href="{{ url('results', {fill: user.id }) }}"><img src="{{app.request.basepath}}/assets/img/arrow2.svg" alt=""></a>
                        </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% include 'partials/foot.twig' %}